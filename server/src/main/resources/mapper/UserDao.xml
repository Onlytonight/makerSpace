<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qks.makerSpace.dao.UserDao">

    <select id="getUserByNameAndPassword" resultType="com.qks.makerSpace.entity.User">
        select *
        from user
        where name = #{name} and password = #{password}
    </select>

    <select id="getAllUser" resultType="com.qks.makerSpace.entity.User">
        select *
        from user
        where name != #{admin}
    </select>

    <insert id="addUser">
        insert into user(name, password, user_id)
        VALUES (#{name}, #{password}, #{id})
    </insert>

</mapper>